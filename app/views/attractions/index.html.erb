<table style ="width:50%">
  <th>Listing attractions</th>
  <tbody>
    <%= link_to "Log Out", logout_path %>

    <tr>
      <th>name</th>
      <th>tickets</th>
      <th>details</th>
    </tr>
    <% @attractions.each do |attraction| %>
    <tr>
      <td><%= attraction.name  %></td>
      <td><%= attraction.tickets  %></td>
      <% if @user.admin  %>
      <td><%= link_to "Show #{attraction.name}", ride_path(attraction)%> </td>
      <% else %>
      <td><%= link_to "Go on #{attraction.name}", ride_path(attraction)%> </td>
      <% end %>
    </tr>

    <% end %>

  </tbody>
</table>

<% if @user.admin %>
  <%= link_to "New Attraction", create_ride_path %>
  <% end %>
